print ("добро пожаловать")                    # ригистрация
print("просьба зарегистрироватся")  


age = int(input("сколько вам лет:"))          # проверка возроста
print("проверка")
if age > 17:
    print("проверка успешно пройдена:)")


    nik = input("ведите ник:")                # никнейм
    print("проверка")
    print("проверка пройдена")


    print("ваши даные:")                      # все даные
    print(age)
    print(nik)
 

else:
    print("проверка не пройдена:(")           # если ригистрация была не пройдена
